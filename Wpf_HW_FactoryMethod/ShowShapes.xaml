<Window x:Name="Wind_Show" x:Class="Wpf_HW_FactoryMethod.ShowShapes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_HW_FactoryMethod"
        mc:Ignorable="d"
        Title="ShowShapes" Height="300" Width="400">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"/>

        </Grid.RowDefinitions>
        <Label x:Name="lab_1" Content="Label" HorizontalContentAlignment="Center"  Margin="60,12,60,0" VerticalAlignment="Top"  FontSize="18" FontFamily="Georgia" Foreground="#FF6A046A" FontWeight="Bold"/>
        <Canvas HorizontalAlignment="Left" Height="190" Margin="10,10,10,10" Grid.Row="1" VerticalAlignment="Top" Width="370">
            <StackPanel x:Name="stack_panel" Height="180" Canvas.Left="5" Canvas.Top="5" Width="360"/>
        </Canvas>

    </Grid>

</Window>
